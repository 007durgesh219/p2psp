peer_port=$1

if [ -z $peer_port ]; then
   echo "Missing listening port (9999, for example)";
   exit;
fi

source=$2

if [ -z $source ]; then
   echo "Missing source end-point (150.214.150.68:4552, for example)";
   exit;
fi

#xterm -e "~/p2psp/peer.py -s $source -l $peer_port" &
~/p2psp/peer.py -s $source -l $peer_port &

sleep 1

#firefox http://localhost:$peer_port &
vlc http://localhost:$peer_port > /dev/null 2> /dev/null &
